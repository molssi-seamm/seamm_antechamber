#        #atom_types = ff_assigner.assign(smiles, add_hydrogens=False)
#        print('IN ASSIGN PARAMETERS')
#        print(system.atoms)
#        n_atoms = molecule.GetNumAtoms()
#        atom_types = ['?'] * n_atoms
#        pass
